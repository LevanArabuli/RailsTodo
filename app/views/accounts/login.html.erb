<div class="row">
	<div class="col-xs-6">
		<%= form_tag 'login', method: :post do %>

			<% unless @error.nil? %>
				<div class="alert alert-danger">
				  <%= @error %>
				</div>
			<% end %>

			<div class="form-group">
			  <%= label_tag :email %>
			  <%= text_field_tag :email, nil, class: 'form-control' %>
			</div>
			<div class="form-group">
				<%= label_tag :password %>
				<%= password_field_tag :password, nil, class: 'form-control' %>
			</div>
			<div class="form-group">
				<%= submit_tag 'Login' %>
			</div>
		<% end %>
	</div>
</div>
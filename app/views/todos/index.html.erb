<p id="notice"><%= notice %></p>

<h1>Todos</h1>

<table class="table table-hover" id="todoItems">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Description</th>
      <th>Due date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todo.each do |item| %>
      <tr>
        <td><%= check_box_tag :is_done, 1, item.is_done, :id => item.id %></td>
        <td><%= item.title %></td>
        <td><%= item.description %></td>
        <td><%= item.due_date %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_todo_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<% if @all.length > 0 %>
  <h3>Tasks completed</h3>
  <div class="progress">
    <div class="progress-bar" role="progressbar" aria-valuenow="<%= @done.length %>" aria-valuemin="0" aria-valuemax="<%= @all.length %>" style="width: <%=@progressbar_width%>%;">
      <%= "#{@done.length} / #{@all.length}" %>
    </div>
  </div>
<% end %>

<table class="table table-hover" id="doneItems">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Description</th>
      <th>Due date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @done.each do |item| %>
      <tr>
        <td><%= check_box_tag :is_done, 1, item.is_done, :id => item.id %></td>
        <td><%= item.title %></td>
        <td><%= item.description %></td>
        <td><%= item.due_date %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_todo_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to new_todo_path, class: 'btn btn-success' do %>
  <i class="glyphicon glyphicon-plus"></i> New Todo
<% end %>

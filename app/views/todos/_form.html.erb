<div class="row">
  <div class="col-sm-6">
    <%= form_for todo do |f| %>
      
      <%= render 'shared/errors', model: todo %>

      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control' %>
      </div>

      <div class="row">
        <div class="form-group col-sm-5">        
          <%= f.label :due_date %>
          <%= f.text_field :due_date, class: 'form-control', data: { date_format: 'YYYY/MM/DD' } %>
        </div>
      </div>
      
      <div class="form-group">
        <%= f.submit %>
      </div>
    <% end %>
  </div>
</div>


